{
  "name": "@wedex/components",
  "version": "0.0.1",
  "description": "Comunion UI components",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "type": "module",
  "files": [
    "src",
    "dist",
    "windi.config.ts",
    "README.md",
    "README_zh.md"
  ],
  "scripts": {
    "#watch:components": "NODE_ENV=development node scripts/build.js",
    "watch:components": "NODE_ENV=development node scripts/vite.js",
    "watch:types": "tsc --project tsconfig.types.json --watch",
    "#watch:styles": "mkdir -p dist/es && cp -r src/Typography dist/es",
    "#watch": "rimraf dist && run-p watch:*",
    "#dev": "npm run watch",
    "#build:components": "node scripts/build.js",
    "build:components": "node scripts/vite.js",
    "build:types": "tsc --project tsconfig.types.json",
    "#build:styles": "mkdir -p dist/es && cp -r src/Typography dist/es",
    "build": "rimraf dist && npm run build:types && npm run build:components",
    "dev:demo": "vite"
  },
  "repository": "comunion-io/front-next.git",
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "components"
  ],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/comunion-io/front-next/issues"
  },
  "homepage": "https://github.com/comunion-io/front-next#readme",
  "dependencies": {
    "@wedex/hooks": "workspace:^0.0.1",
    "@wedex/icons": "0.0.1",
    "@wedex/utils": "0.0.1",
    "big.js": "^6.2.1",
    "copy-to-clipboard": "^3.3.3",
    "naive-ui": "^2.34.2",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.5",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "esbuild": "^0.14.25",
    "fast-glob": "^3.2.11",
    "npm-run-all": "^4.1.5",
    "postcss-nested": "^5.0.6",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vite": "^3.1.3",
    "vite-plugin-windicss": "^1.8.8",
    "vue-router": "^4.1.5",
    "windicss": "^3.5.6"
  }
}